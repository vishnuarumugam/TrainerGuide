<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>


    <style name="fontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="appNameFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/themeColourTwo</item>
    </style>

    <style name="FoodChartRadioButtonStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/themeColourTwo</item>
    </style>

    <style name="FoodChartTabStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/grey</item>
    </style>


    <style name="DialogRadioButton" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/themeColourTwo</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/themeColourOne</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/themeColourTwo</item>
    </style>

    <style name="DialogCheckBox" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/themeColourTwo</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/themeColourOne</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogEditText" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/themeColourTwo</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/themeColourTwo</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/themeColourOne</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogUpdateButton" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="backgroundTint">@color/themeColourOne</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/headerDark</item>
        <item name="colorControlActivated">@color/themeColourTwo</item>
    </style>

    <style name="ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProfileTabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>