<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prepare_food_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ProfileScreen"
    android:background="@color/white"
    tools:openDrawer="start">


    <include layout="@layout/common_navigator"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/common_toolbar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".PrepareFoodChart">


                <RadioGroup
                    android:id="@+id/radioFoodChartGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:theme="@style/FoodChartRadioButtonStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/radioButtonVeg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="VEG"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButtonNV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="NON VEG"
                        android:textStyle="bold" />

                </RadioGroup>
                <!--<SearchView
                    android:id="@+id/foodChartSearch"
                    android:layout_width="match_parent"
                    android:layout_marginTop="32dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:background="@color/greyShade"
                    android:elevation="20dp"
                    android:hint="Search Food Items"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioFoodChartGroup" />-->

                <EditText
                    android:id="@+id/foodChartSearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:elevation="20dp"
                    android:hint="Search Food Items"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioFoodChartGroup" />


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@color/themeColourFour"
                    android:id="@+id/nestedScrollViewSource"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/foodChartSearch">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/foodsourceRecycler"
                            tools:listitem="@layout/food_chart_item"
                            android:layout_marginTop="30dp"/>

                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/foodTimingTabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:tabMode="scrollable"
                    app:tabTextColor="@color/themeColourTwo"
                    app:tabIndicatorColor="@color/themeColourTwo"
                    app:tabBackground="@drawable/food_chart_tab"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nestedScrollViewSource">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Break Fast"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snacks M"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunch"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snacks E"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinner"/>

                </com.google.android.material.tabs.TabLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalCaloriesRelLay"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/foodTimingTabs">

                    <TextView
                        android:id="@+id/activityLevelLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="Activity Level: "/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activityLevelSpin"
                        android:textAlignment="center"
                        android:layout_toRightOf="@+id/activityLevelLabel" />

                    <TextView
                        android:id="@+id/recommendedCaloriesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/activityLevelSpin"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Maintenance Calories: "/>

                    <TextView
                        android:id="@+id/recommendedCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/recommendedCaloriesLabel"
                        android:layout_toRightOf="@+id/recommendedCaloriesLabel"
                        android:text="450"/>

                    <TextView
                        android:id="@+id/totalCaloriesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/recommendedCaloriesLabel"
                        android:text="Added Calories: "/>

                    <TextView
                        android:id="@+id/totalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/totalCaloriesLabel"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@+id/totalCaloriesLabel"
                        android:text="450" />


                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:elevation="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/generatePdfBtn"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/pdf"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:background="@color/themeColourFour"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/nestedScrollView"
                    app:layout_constraintTop_toBottomOf="@+id/totalCaloriesRelLay">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/selectedFoodRecycler"
                            tools:listitem="@layout/selected_fooditem"
                            android:layout_marginTop="30dp"/>

                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>