<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColourThree"
    tools:context=".RegistrationForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@mipmap/bottom_background"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themeColourOne"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createAccountTitle"
                    android:text="Create Account"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/createAccountTitle"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/bottom_background"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="124dp"
                        android:layout_marginTop="45dp"
                        android:src="@mipmap/create_account_image"
                        android:layout_gravity="center"
                        android:elevation="5dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/userNameLinear"
                        android:background="@drawable/theme_colour_one_round_shape"
                        android:padding="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_shape"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginVertical="2dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/white"
                                android:src="@mipmap/name" />

                            <EditText
                                android:id="@+id/userRgrName_Input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="7dp"
                                android:background="@android:color/transparent"
                                android:hint="user name"
                                android:maxLength="15"
                                android:textSize="16sp"
                                android:inputType="text"
                                android:textColor="@color/themeColourTwo"
                                android:fontFamily="@font/poppins_medium"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_verify"
                        android:id="@+id/verifyUserName"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:layout_alignRight="@id/userNameLinear"
                        android:layout_alignParentEnd="true"
                        ></ImageButton>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/theme_colour_one_round_shape"
                        android:padding="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_shape"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginVertical="2dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/white"
                                android:src="@mipmap/email" />

                            <EditText
                                android:id="@+id/userRgrEmail_Input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="7dp"
                                android:maxLength="60"
                                android:background="@android:color/transparent"
                                android:hint="email address"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/themeColourTwo" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/theme_colour_one_round_shape"
                        android:padding="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="@drawable/round_shape"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginVertical="2dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/white"
                                android:src="@mipmap/mobile" />

                            <EditText
                                android:id="@+id/userRgrMobile_Input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="7dp"
                                android:background="@android:color/transparent"
                                android:hint="mobile"
                                android:maxLength="10"
                                android:textSize="16sp"
                                android:inputType="number"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/themeColourTwo" />

                        </LinearLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/passwordLinear"
                            android:layout_marginHorizontal="35dp"
                            android:background="@drawable/theme_colour_one_round_shape"
                            android:padding="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_shape"
                                android:orientation="horizontal"
                                android:padding="1dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginVertical="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@color/white"
                                    android:src="@mipmap/password" />

                                <EditText
                                    android:id="@+id/userRgrPassword_Input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="7dp"
                                    android:background="@android:color/transparent"
                                    android:hint="password"
                                    android:maxLength="15"
                                    android:inputType="textPassword"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/themeColourTwo" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageButton
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/userRgrPassHint"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:layout_alignRight="@id/passwordLinear"
                            android:layout_alignParentEnd="true"
                            android:src="@mipmap/info"/>


                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/theme_colour_one_round_shape"
                        android:padding="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_shape"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginVertical="2dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/white"
                                android:src="@mipmap/password" />

                            <EditText
                                android:id="@+id/userRgrConPassword_Input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="7dp"
                                android:background="@android:color/transparent"
                                android:hint="confirm password"
                                android:inputType="textVisiblePassword"
                                android:maxLength="15"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/themeColourTwo" />

                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="0dp"
                    android:padding="0dp">
