<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UserReport"
    android:background="@color/white"
    tools:openDrawer="start">

    <include layout="@layout/common_navigator"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:gravity="center">

            <include layout="@layout/common_toolbar"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/progressUserReport"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:id="@+id/noDataGraphLinear"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:text="No Data available. Please update your profile."
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Weight graph"
                    android:textAlignment="center"
                    android:id="@+id/dataGraphLinear"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/themeColourOne"
                    android:gravity="center"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/graphLinear"
                    android:orientation="vertical"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/themeColourThree">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/themeColourTwo"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="kg(s)"/>

                        <com.jjoe64.graphview.GraphView
                            android:id="@+id/userProgressGraph"
                            android:layout_width="300dp"
                            android:layout_height="304dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="30dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tool_bar" />

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="day(s)"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/themeColourTwo"
                        android:gravity="center"/>

                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/userDetailGrid"
                    android:visibility="visible"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="center"
                    android:columnCount="2"
                    android:rowCount="1"
                    android:columnOrderPreserved="false"
                    android:alignmentMode="alignMargins">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardElevation="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginVertical="10dp"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="left">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="3dp"
                            android:background="@drawable/theme_colour_two_round_shape">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/theme_colour_one_round_shape">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/reportBmiLabel"
                                    android:text="BMI"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_centerHorizontal="true"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/themeColourThree" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/reportBmi"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@id/reportBmiLabel"
                                    android:layout_centerHorizontal="true"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/themeColourThree"/>

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="right">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="3dp"
                            android:background="@drawable/theme_colour_two_round_shape">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/theme_colour_one_round_shape">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/reportWeightLabel"
                                    android:text="Weight"
                                    android:textAlignment="center"
                                    android:textSize="16sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/themeColourThree"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/reportWeight"
                                    android:layout_below="@id/reportWeightLabel"
                                    android:layout_marginTop="10dp"
                                    android:textSize="16sp"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/themeColourThree"
                                    android:gravity="center"/>

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/detailsReportRel">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI category: "
                    android:textStyle="normal"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/themeColourOne"
                    android:id="@+id/bmiCategoryReportLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/bmiCategoryReport"
                    android:layout_toRightOf="@id/bmiCategoryReportLabel"
                    android:layout_alignStart="@+id/totalCaloriesReport"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textColor="@color/themeColourTwo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ideal BMI: "
                    android:textStyle="normal"
                    android:visibility="gone"
                    android:textColor="@color/themeColourOne"
                    android:id="@+id/idealWeightReportLabel"
                    android:layout_below="@+id/bmiCategoryReportLabel"
                    android:layout_alignStart="@+id/bmiCategoryReportLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/idealWeightReport"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/idealWeightReportLabel"
                    android:layout_below="@+id/bmiCategoryReport"
                    android:layout_alignStart="@+id/totalCaloriesReport"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textColor="@color/themeColourOne"  />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight difference: "
                    android:textStyle="normal"
                    android:textColor="@color/themeColourOne"
                    android:id="@+id/weightDifferenceReportLabel"
                    android:layout_below="@+id/idealWeightReportLabel"
                    android:layout_alignStart="@+id/idealWeightReportLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/weightDifferenceReport"
                    android:layout_toRightOf="@id/weightDifferenceReportLabel"
                    android:layout_below="@+id/idealWeightReport"
                    android:layout_alignStart="@+id/totalCaloriesReport"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textColor="@color/themeColourOne"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Required calories per day: "
                    android:textStyle="normal"
                    android:textColor="@color/themeColourOne"
                    android:id="@+id/totalCaloriesReportLabel"
                    android:layout_below="@+id/weightDifferenceReportLabel"
                    android:layout_alignStart="@+id/weightDifferenceReportLabel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/totalCaloriesReport"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/totalCaloriesReportLabel"
                    android:layout_below="@+id/weightDifferenceReport"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textColor="@color/themeColourOne" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/themeColourTwo"
                android:layout_marginTop="20dp"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp"
                    android:id="@+id/dataPieChart"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/themeColourOne"
                    android:gravity="center"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:id="@+id/macroNutrientPieChart"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal" />


            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="30dp"
                    android:id="@+id/macroNutrientGrid"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="30dp"
                    android:layout_gravity="center"
                    android:columnCount="2"
                    android:rowCount="1"
                    android:columnOrderPreserved="false"
                    android:alignmentMode="alignMargins">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_gravity="left"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginHorizontal="5dp"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:background="@color/grey"
                            android:id="@+id/macroNutrient1Rel">

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/macroNutrient1Color"
                                android:background="@color/themeColourOne"
                                android:gravity="center"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/macroNutrient1Label"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/macroNutrient1Rel"
                            android:textAlignment="center"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_gravity="right"
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginHorizontal="5dp"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:background="@color/grey"
                            android:id="@+id/macroNutrient2Rel">

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/macroNutrient2Color"
                                android:background="@color/themeColourTwo"
                                android:gravity="center"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/macroNutrient2Label"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/macroNutrient2Rel"
                            android:textAlignment="center"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="left"
                        android:id="@+id/macroRelative"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="5dp"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:background="@color/grey"
                            android:id="@+id/macroNutrient3Rel">

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/macroNutrient3Color"
                                android:background="@color/themeColourThree"
                                android:gravity="center"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/macroNutrient3Label"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/macroNutrient3Rel"
                            android:textAlignment="center"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                   <!-- <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="left"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="5dp"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:background="@color/grey"
                            android:id="@+id/totalCaloriesRel">

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="Tota; Calories"
                                android:id="@+id/totalCaloriesReportLabel"
                                android:gravity="center"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/totalCaloriesReport"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/totalCaloriesRel"
                            android:textAlignment="center"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black" />

                    </RelativeLayout>-->


            </GridLayout>

        </LinearLayout>



    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>


