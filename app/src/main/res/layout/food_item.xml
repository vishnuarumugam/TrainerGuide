<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/foodItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/foodItemNameLabel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Name:"
                android:textColor="@color/black"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/foodItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@id/foodItemNameLabel"
                android:layout_toRightOf="@id/foodItemNameLabel"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/foodItemNtLabel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodItemNameLabel"
                android:layout_margin="5dp"
                android:text="Nutrition:"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/foodItemNt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodItemName"
                android:layout_alignTop="@id/foodItemNtLabel"
                android:layout_toRightOf="@id/foodItemNtLabel"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/foodItemCalorieLabel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodItemNt"
                android:layout_margin="5dp"
                android:text="Calorie:"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/foodItemCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/foodItemCalorieLabel"
                android:layout_toRightOf="@id/foodItemCalorieLabel"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold|italic"/>





        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>