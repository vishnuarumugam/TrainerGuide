<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@mipmap/bottom_background"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themeColourOne"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createAccountTitle"
                    android:text="Forgot Password"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/createAccountTitle"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/bottom_background"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="190dp"
                        android:layout_height="145dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="70dp"
                        android:elevation="5dp"
                        android:src="@mipmap/forgot_password" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/theme_colour_one_round_shape"
                        android:padding="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_shape"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginVertical="2dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/white"
                                android:src="@drawable/profile_email" />

                            <EditText
                                android:id="@+id/userFgpEmail_Input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="7dp"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:background="@android:color/transparent"
                                android:hint="email address"
                                android:textColor="@color/themeColourTwo" />

                        </LinearLayout>
                    </LinearLayout>



                    <Button
                        android:id="@+id/btnFgp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/themeColourTwo"
                        android:backgroundTint="@color/themeColourOne"
                        android:text="RESET PASSWORD"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="16sp" />


                </LinearLayout>

            </RelativeLayout>


        </androidx.core.widget.NestedScrollView>



    </RelativeLayout>


