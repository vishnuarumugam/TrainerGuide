<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/trainer_view_drawer_layout"
    tools:context=".TrainerScreen">

    <include layout="@layout/common_navigator"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/common_toolbar"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/backgroundImg"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@mipmap/profile_background_image"
                        android:scaleType="fitCenter"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/trainerCardView"
                        android:backgroundTint="@color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/backgroundImg"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="-160dp"
                        android:layout_centerHorizontal="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:id="@+id/txtName"
                                android:text="Sathish"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/themeColourOne"
                                android:textSize="25sp"
                                />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@color/white"
                                android:layout_below="@+id/txtName"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="10dp"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:id="@+id/trainerExperienceLabel"
                                        android:background="@drawable/round_shape"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/themeColourOne"
                                        android:layout_centerHorizontal="true"
                                        android:textAlignment="center"
                                        android:textSize="15sp"
                                        android:text="Experience"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/trainerExperienceLabel"
                                        android:id="@+id/txtExperience"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/themeColourOne"
                                        android:textAlignment="center"
                                        android:layout_centerHorizontal="true"
                                        android:textSize="15sp"
                                        android:text="3 Yrs"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginHorizontal="10dp"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:id="@+id/trainerTraineesCountLabel"
                                        android:background="@drawable/round_shape"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textAlignment="center"
                                        android:layout_centerHorizontal="true"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="15sp"
                                        android:text="Trainees"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@+id/trainerTraineesCountLabel"
                                        android:id="@+id/trainerTraineesCount"
                                        android:background="@drawable/round_shape"
                                        android:fontFamily="@font/poppins_light"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="15sp"
                                        android:textAlignment="center"
                                        android:text="30"/>
                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:id="@+id/trainerRatingLabel"
                                        android:background="@drawable/round_shape"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textAlignment="center"
                                        android:layout_centerHorizontal="true"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="15sp"
                                        android:text="Rating"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/trainerRatingLabel"
                                        android:id="@+id/trainerRatings"
                                        android:background="@drawable/round_shape"
                                        android:fontFamily="@font/poppins_light"
                                        android:layout_centerHorizontal="true"
                                        android:textAlignment="center"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="15sp"
                                        android:text="3.5"/>
                                </RelativeLayout>
                            </RelativeLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/trainerImageCardView"
                        android:layout_width="167dp"
                        android:layout_height="147dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="20dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/trainerimage"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="-50dp"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_below="@+id/trainerCardView"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/yourTrainerText"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_medium"
                            />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@color/homeScreenBgColor"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/txtPhnNoLabel"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text="Mobile :" />

                                <TextView
                                    android:id="@+id/txtPhnNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_toRightOf="@+id/txtPhnNoLabel"
                                    android:text="" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@color/homeScreenBgColor"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/txtEmailLabel"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Email :" />

                                <TextView
                                    android:id="@+id/txtEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_toRightOf="@+id/txtEmailLabel"
                                    android:text="" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@color/homeScreenBgColor"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/txtRatingLabel"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Rate :" />

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    android:isIndicator="false"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:theme="@style/RatingBar"
                                    android:stepSize="0.5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_toRightOf="@+id/txtRatingLabel"
                                    android:numStars="5" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ratingSubmit"
                                    android:visibility="gone"
                                    android:src="@drawable/ic_done"
                                    android:padding="5dp"
                                    android:layout_centerVertical="true"
                                    android:backgroundTint="@color/transparent"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/themeColourTwo"
                                    android:text="Confirm"/>

                                <TextView
                                    android:id="@+id/txtUserCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_toRightOf="@+id/ratingBar"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@color/homeScreenBgColor"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/txtDescriptionLabel"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text="Description :" />

                                <TextView
                                    android:id="@+id/txtDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_toRightOf="@+id/txtDescriptionLabel"
                                    android:text="Description" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/btnRequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/themeColourTwo"
                            android:layout_marginTop="50dp"
                            android:text="Request" />
                    </LinearLayout>
                </RelativeLayout>


                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Name"
                    android:id="@+id/txtNameLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/trainerImg" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/txtName"
                    android:text="Name"
                    app:layout_constraintStart_toEndOf="@+id/txtNameLabel"
                    app:layout_constraintTop_toBottomOf="@+id/trainerImg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Email"
                    android:id="@+id/txtEmailLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNameLabel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/txtEmail"
                    android:text="Email"
                    app:layout_constraintStart_toEndOf="@+id/txtNameLabel"
                    app:layout_constraintTop_toBottomOf="@+id/txtNameLabel" />
            -->


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>