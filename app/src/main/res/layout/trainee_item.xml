<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trainee_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="0dp"
    android:padding="5dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/traineeConsItem"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/traineeItem"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">



            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/traineeProfileImageCard"
                app:cardCornerRadius="50dp"
                android:layout_centerVertical="true"
                android:elevation="5dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trainee_image_shimmer"
                    app:shimmer_duration="800">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/adShadowTwo"/>


                </com.facebook.shimmer.ShimmerFrameLayout>

                <ImageView
                    android:id="@+id/traineeProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="2dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/traineeItemThemeLine"
                app:cardBackgroundColor="@color/themeColourOne"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/traineeProfileImageCard"/>

            <TextView
                android:id="@+id/traineeItemNameLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/traineeItemThemeLine"
                android:text="Name:"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"/>
            <TextView
                android:id="@+id/traineeItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/traineeItemNameLabel"
                android:text=" --"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"/>

            <TextView
                android:id="@+id/traineeItemBmiLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traineeItemNameLabel"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/traineeItemThemeLine"
                android:text="BMI:"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"/>

            <TextView
                android:id="@+id/traineeItemBmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/traineeItemName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/traineeItemBmiLabel"
                android:text=" --"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/traineeReportView"
                android:gravity="center"
                android:text="View Report"
                android:paddingHorizontal="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:background="@drawable/theme_colour_two_round_shape"
                android:textColor="@color/white"
                android:layout_below="@id/traineeItemBmiLabel"
                android:layout_toRightOf="@id/traineeItemThemeLine"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/traineeSubscriptionStatus"
                android:text="Status"
                android:paddingHorizontal="4dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/traineeReportView"
                />



            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_delete"
                android:id="@+id/deleteTrainee"
                android:backgroundTint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
