<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ProfileScreen"
    android:background="@color/white"
    tools:openDrawer="start">

    <include layout="@layout/common_navigator"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/homeScreenTabLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/common_toolbar"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/homeScreenBgColor">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="175dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:background="@mipmap/profile_background_image"
                            android:scaleType="centerCrop" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profileImageHolder"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="100dp"
                            android:elevation="5dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="160dp">

                                <TextView
                                    android:id="@+id/profileUsername"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/themeColourOne"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/profileType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/profileUsername"
                                    android:layout_alignStart="@id/profileUsername"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/poppins_light"
                                    android:textColor="@color/themeColourOne"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:id="@+id/ratingTraineesLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/profileType"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                    <RelativeLayout
                                        android:id="@+id/trainerRatingLayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:paddingVertical="5dp">

                                        <RelativeLayout
                                            android:id="@+id/trainerRatingSubLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true">

                                            <TextView
                                                android:id="@+id/trainerRating"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="-"
                                                android:textColor="@color/themeColourOne"
                                                android:textSize="14sp"
                                                android:textStyle="bold" />

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="18dp"
                                                android:layout_marginLeft="2dp"
                                                android:layout_marginTop="0dp"
                                                android:layout_toRightOf="@id/trainerRating"
                                                android:src="@drawable/rating_icon" />

                                        </RelativeLayout>


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/trainerRatingSubLayout"
                                            android:layout_alignParentLeft="true"
                                            android:fontFamily="@font/poppins_light"
                                            android:text="Rating"
                                            android:textAlignment="center"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="14sp" />


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:paddingVertical="5dp">

                                        <TextView
                                            android:id="@+id/traineesNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="-"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/traineesNumber"
                                            android:layout_alignParentLeft="true"
                                            android:fontFamily="@font/poppins_light"
                                            android:text="Trainees"
                                            android:textAlignment="center"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="14sp" />

                                    </RelativeLayout>



                                </LinearLayout>


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="70dp"
                            android:backgroundTint="@color/themeColourTwo"
                            android:elevation="10dp"
                            app:cardCornerRadius="20dp">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:backgroundTint="@color/themeColourTwo"
                                app:cardCornerRadius="18dp">

                                <ImageButton
                                    android:id="@+id/profileImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/homeScreenBgColor"
                                    android:scaleType="centerCrop"
                                    />

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>


                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/profileTabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/profileImageHolder"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/transparent"
                            android:textAlignment="center"
                            app:tabGravity="fill"
                            app:tabIndicatorColor="@color/themeColourTwo"
                            app:tabMaxWidth="0dp"
                            app:tabSelectedTextColor="@color/themeColourOne"
                            app:tabTextAppearance="@style/ProfileTabStyle"
                            app:tabTextColor="@color/themeColourFour">

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:textAlignment="center" />

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Account"
                                android:textAlignment="center" />

                        </com.google.android.material.tabs.TabLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabViewLayout"
                            android:layout_below="@id/profileTabLayout"
                            android:paddingVertical="15dp">

                            <!-- Account View -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/accountTabView"
                                android:background="@color/homeScreenBgColor"
                                android:visibility="visible">

                                <RelativeLayout
                                    android:id="@+id/profilePhoneRelativeLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="20dp">

                                    <ImageView
                                        android:id="@+id/profilePhoneImage"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="15dp"
                                        android:src="@drawable/profile_mobile" />

                                    <TextView
                                        android:id="@+id/profilePhoneNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@id/profilePhoneImage"
                                        android:layout_toRightOf="@id/profilePhoneImage"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/profilePhoneLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/profilePhoneNumber"
                                        android:layout_toRightOf="@id/profilePhoneImage"
                                        android:fontFamily="@font/poppins_light"
                                        android:text="mobile"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="10sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/profileEmailRelativeLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/profilePhoneRelativeLay"
                                    android:paddingHorizontal="20dp">

                                    <ImageView
                                        android:id="@+id/profileEmailImage"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="15dp"
                                        android:src="@drawable/profile_email" />

                                    <TextView
                                        android:id="@+id/profileEmailId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@id/profileEmailImage"
                                        android:layout_toRightOf="@id/profileEmailImage"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/profileEmailLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/profileEmailId"
                                        android:layout_toRightOf="@id/profileEmailImage"
                                        android:fontFamily="@font/poppins_light"
                                        android:text="email"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="10sp" />
                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/profileGenderRelativeLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/profileEmailRelativeLay"
                                    android:paddingHorizontal="20dp">

                                    <ImageView
                                        android:id="@+id/profileGenderImage"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="15dp"
                                        android:src="@drawable/gender_male" />

                                    <TextView
                                        android:id="@+id/profileGender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@id/profileGenderImage"
                                        android:layout_toRightOf="@id/profileGenderImage"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/profileGenderLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/profileGender"
                                        android:layout_toRightOf="@id/profileGenderImage"
                                        android:fontFamily="@font/poppins_light"
                                        android:text="gender"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="10sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/profileAdRelativeLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/profileGenderRelativeLay"
                                    android:paddingHorizontal="20dp">

                                    <ImageView
                                        android:id="@+id/profileAdImage"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="15dp"
                                        android:src="@drawable/ad_icon" />

                                    <TextView
                                        android:id="@+id/profileAd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@id/profileAdImage"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Your Ad"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/profileResetPassRelativeLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/profileAdRelativeLay"
                                    android:paddingHorizontal="20dp">

                                    <ImageView
                                        android:id="@+id/profileResetPassImage"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="15dp"
                                        android:src="@drawable/profile_password" />

                                    <TextView
                                        android:id="@+id/profileResetPass"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@id/profileResetPassImage"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/resetPassword"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>


                            </RelativeLayout>

                            <!-- Profile View -->
                            <RelativeLayout
                                android:id="@+id/profileTabView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/homeScreenBgColor"
                                android:visibility="visible">


                                <RelativeLayout
                                    android:id="@+id/dobRelativeLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="20dp">

                                    <ImageView
                                        android:id="@+id/profileDobImage"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="15dp"
                                        android:src="@drawable/profile_dob" />

                                    <TextView
                                        android:id="@+id/profileDob"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@id/profileDobImage"
                                        android:layout_toRightOf="@id/profileDobImage"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/profileDobLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/profileDob"
                                        android:layout_toRightOf="@id/profileDobImage"
                                        android:fontFamily="@font/poppins_light"
                                        android:text="date of birth"
                                        android:textColor="@color/themeColourOne"
                                        android:textSize="10sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/profileTrainerDetailsLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/dobRelativeLay"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:id="@+id/experienceRelativeLay"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="20dp">

                                        <ImageView
                                            android:id="@+id/profileExperienceImage"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_margin="15dp"
                                            android:src="@drawable/experience" />

                                        <TextView
                                            android:id="@+id/profileExperience"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/profileExperienceImage"
                                            android:layout_toRightOf="@id/profileExperienceImage"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="12sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/profileExperienceLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/profileExperience"
                                            android:layout_toRightOf="@id/profileExperienceImage"
                                            android:text="experience (in years)"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="10sp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/subscriptionFeesRelativeLay"
                                        android:paddingLeft="20dp"
                                        android:layout_below="@id/experienceRelativeLay">

                                        <ImageView
                                            android:id="@+id/profileSubscriptionFeesImage"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_margin="15dp"
                                            android:src="@drawable/rupee"/>
                                        <TextView
                                            android:id="@+id/profileSubscriptionFees"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="12sp"
                                            android:textStyle="bold"
                                            android:layout_toRightOf="@id/profileSubscriptionFeesImage"
                                            android:layout_alignTop="@id/profileSubscriptionFeesImage"/>
                                        <TextView
                                            android:id="@+id/profileSubscriptionFeesLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="subscription fees"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="10sp"
                                            android:layout_toRightOf="@id/profileSubscriptionFeesImage"
                                            android:layout_below="@id/profileSubscriptionFees" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:id="@+id/subscriptionDescriptionRelativeLay"
                                        android:layout_below="@id/subscriptionFeesRelativeLay">

                                        <ImageView
                                            android:id="@+id/profileSubscriptionDescriptionImage"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_margin="15dp"
                                            android:src="@drawable/description"/>
                                        <TextView
                                            android:id="@+id/profileSubscriptionDescription"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="12sp"
                                            android:textStyle="bold"
                                            android:layout_toRightOf="@id/profileSubscriptionDescriptionImage"
                                            android:layout_alignTop="@id/profileSubscriptionDescriptionImage"/>
                                        <TextView
                                            android:id="@+id/profileSubscriptionDescriptionLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="training details"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="10sp"
                                            android:layout_toRightOf="@id/profileSubscriptionDescriptionImage"
                                            android:layout_below="@id/profileSubscriptionDescription" />
                                    </RelativeLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/profileTraineeDetailsLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/dobRelativeLay"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="20dp"
                                        android:id="@+id/subscriptionTrainerRelativeLay">

                                        <ImageView
                                            android:id="@+id/profileSubscriptionTrainerImage"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/trainers"
                                            android:layout_margin="15dp"/>
                                        <TextView
                                            android:id="@+id/profileSubscriptionTrainer"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@id/profileSubscriptionTrainerImage"
                                            android:layout_alignTop="@id/profileSubscriptionTrainerImage"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="12sp"
                                            android:textStyle="bold" />
                                        <TextView
                                            android:id="@+id/profileSubscriptionTrainerLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="trainer"
                                            android:layout_toRightOf="@id/profileSubscriptionTrainerImage"
                                            android:layout_below="@id/profileSubscriptionTrainer"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="10sp"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/subscriptionExtendRelativeLay"
                                        android:layout_below="@id/subscriptionTrainerRelativeLay"
                                        android:paddingHorizontal="20dp">

                                        <ImageView
                                            android:id="@+id/profileSubscriptionExtendImage"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/end_date"
                                            android:layout_margin="15dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/txtSubscriptionDate"
                                            android:text="12/10/2021"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="12sp"
                                            android:textStyle="bold"
                                            android:layout_toRightOf="@id/profileSubscriptionExtendImage"
                                            android:layout_alignTop="@id/profileSubscriptionExtendImage" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/txtSubscriptionDateLabel"
                                            android:text="subscription end date"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="@color/themeColourOne"
                                            android:textSize="10sp"
                                            android:layout_toRightOf="@id/profileSubscriptionExtendImage"
                                            android:layout_below="@id/txtSubscriptionDate"/>


                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/themeColourTwo"
                                            android:id="@+id/extendbtn"
                                            android:text="Renew"
                                            android:layout_marginTop="10dp"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="@color/white"
                                            android:visibility="visible"
                                            android:textAlignment="center"
                                            android:layout_alignStart="@id/txtSubscriptionDateLabel"
                                            android:layout_below="@id/txtSubscriptionDateLabel"/>

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/themeColourFour"
                                            android:id="@+id/subscriptionRemoveBtn"
                                            android:text="Remove"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginLeft="10dp"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="@color/themeColourOne"
                                            android:visibility="visible"
                                            android:textAlignment="center"
