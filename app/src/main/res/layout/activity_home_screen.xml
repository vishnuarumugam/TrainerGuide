                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginVertical="10dp"
                                    android:padding="8dp"
                                    android:layout_below="@+id/homeScreenGoalTitle"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/weightLossSubscription"
                                        android:background="@drawable/radio_button_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:padding="5dp"
                                        android:text="Weight Loss"
                                        android:textAlignment="center"
                                        android:textColor="@drawable/radio_button_text_selector" />

                                    <RadioButton
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/weightGainSubscription"
                                        android:background="@drawable/radio_button_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:layout_marginHorizontal="15dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:padding="5dp"
                                        android:text="Weight Gain"
                                        android:textAlignment="center"
                                        android:textColor="@drawable/radio_button_text_selector" />

                                    <RadioButton
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/weightMaintainSubscription"
                                        android:background="@drawable/radio_button_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:padding="5dp"
                                        android:text="Stay Fit"
                                        android:textAlignment="center"
                                        android:textColor="@drawable/radio_button_text_selector" />


                                </RadioGroup>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <!--Track Fit Layout-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_screen_track_fit_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/home_screen_goal_layout"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="25dp"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/homeScreenTrackFitTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Track your fitness"
                                    android:textColor="@color/themeColourOne"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/homeScreenTrackFitTitle"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <RelativeLayout
                                            android:id="@+id/weightLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:padding="5dp">

                                            <ImageView
                                                android:id="@+id/weightIcon"
                                                android:layout_width="22dp"
                                                android:layout_height="20dp"
                                                android:layout_centerHorizontal="true"
                                                android:src="@mipmap/weight" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/weightIcon"
                                                android:layout_marginTop="5dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Weight"
                                                android:textAlignment="center"
                                                android:textSize="14sp"
                                                android:textColor="@color/themeColourOne" />


                                        </RelativeLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <RelativeLayout
                                            android:id="@+id/heightLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginHorizontal="10dp"
                                            android:padding="5dp">

                                            <ImageView
                                                android:id="@+id/heightIcon"
                                                android:layout_width="22dp"
                                                android:layout_height="20dp"
                                                android:layout_centerHorizontal="true"
                                                android:src="@mipmap/height" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/heightIcon"
                                                android:layout_marginTop="5dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Height"
                                                android:textSize="14sp"
                                                android:textAlignment="center"
                                                android:textColor="@color/themeColourOne" />


                                        </RelativeLayout>
                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <RelativeLayout
                                            android:id="@+id/progressLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:padding="5dp">

                                            <ImageView
                                                android:id="@+id/progressIcon"
                                                android:layout_width="22dp"
                                                android:layout_height="20dp"
                                                android:layout_centerHorizontal="true"
                                                android:src="@mipmap/progress" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/progressIcon"
                                                android:layout_marginTop="5dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Progress"
                                                android:textSize="14sp"
                                                android:textAlignment="center"
                                                android:textColor="@color/themeColourOne" />


                                        </RelativeLayout>
                                    </RelativeLayout>



                                </LinearLayout>


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <!--Personal Fit Layout-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_screen_personal_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/home_screen_track_fit_layout"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/homeScreenPersonalTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Personal"
                                    android:textColor="@color/themeColourOne"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/homeScreenPersonalTitle"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <RelativeLayout
                                            android:id="@+id/dietTypeLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:padding="5dp">

                                            <ImageView
                                                android:id="@+id/dietTypeIcon"
                                                android:layout_width="22dp"
                                                android:layout_height="20dp"
                                                android:layout_centerHorizontal="true"
                                                android:src="@mipmap/diet_type" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/dietTypeIcon"
                                                android:layout_marginTop="5dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Diet Type"
                                                android:textSize="14sp"
                                                android:textAlignment="center"
                                                android:textColor="@color/themeColourOne" />


                                        </RelativeLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">
                                        <RelativeLayout
                                            android:id="@+id/allergicLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginHorizontal="10dp"
                                            android:padding="5dp">

                                            <ImageView
                                                android:id="@+id/allergicIcon"
                                                android:layout_width="22dp"
                                                android:layout_height="20dp"
                                                android:layout_centerHorizontal="true"
                                                android:src="@mipmap/food_allergy" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/allergicIcon"
                                                android:layout_marginTop="5dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Allergic"
                                                android:textSize="14sp"
                                                android:textAlignment="center"
                                                android:textColor="@color/themeColourOne" />


                                        </RelativeLayout>
                                    </RelativeLayout>



                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <RelativeLayout
                                            android:id="@+id/healthIssueLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:padding="5dp">

                                            <ImageView
                                                android:id="@+id/healthIssueIcon"
                                                android:layout_width="22dp"
                                                android:layout_height="20dp"
                                                android:layout_centerHorizontal="true"
                                                android:src="@mipmap/health_issues" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/healthIssueIcon"
                                                android:layout_marginTop="5dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Health Issues"
                                                android:textSize="14sp"
                                                android:textAlignment="center"
                                                android:textColor="@color/themeColourOne" />


                                        </RelativeLayout>
                                    </RelativeLayout>



                                </LinearLayout>


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                </LinearLayout>



            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:id="@+id/homeScreenTabLayout"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:itemTextColor="@color/themeColourOne"
                android:background="@color/homeScreenBgColor"
                app:itemTextAppearanceActive="@style/fontStyle"
                app:menu="@menu/bottom_nav_menu">

            </com.google.android.material.bottomnavigation.BottomNavigationView>

