                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Weight"
                                            android:textAlignment="center"
                                            android:textColor="@color/themeColourOne" />


                                    </RelativeLayout>

