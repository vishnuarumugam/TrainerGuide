<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/homeScreenBgColor"
    tools:context=".HomeScreen"
    tools:openDrawer="start">

    <include layout="@layout/common_navigator"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:background="@color/homeScreenBgColor"
                app:layout_constraintBottom_toTopOf="@+id/homeScreenTabLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <include layout="@layout/common_toolbar"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/homeScreenTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Hello"
                            android:textColor="@color/themeColourOne"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/dashboard_user_name"
                            android:layout_toRightOf="@+id/homeScreenTitle"
                            android:layout_alignTop="@+id/homeScreenTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/themeColourOne"
                            android:textSize="16sp" />


                        <!--Ad Layout-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/ad_layout_shadow"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@+id/homeScreenTitle"
                            android:layout_marginHorizontal="45dp"
                            android:layout_marginBottom="35dp"
                            android:layout_marginTop="14dp"
                            android:backgroundTint="@color/adShadowOne"
                            app:cardCornerRadius="10dp">

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@+id/homeScreenTitle"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/adShadowTwo"
                            app:cardCornerRadius="10dp"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ad_layout"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@+id/homeScreenTitle"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/adShadowThree"
                            app:cardCornerRadius="10dp">

                            <com.smarteist.autoimageslider.SliderView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/homeScreenTopAdSlider"
                                app:sliderAnimationDuration="600"
                                app:sliderAutoCycleDirection="back_and_forth"
                                app:sliderAutoCycleEnabled="true"
                                app:sliderIndicatorAnimationDuration="600"
                                app:sliderIndicatorGravity="center_horizontal|bottom"
                                app:sliderIndicatorOrientation="horizontal"
                                app:sliderIndicatorPadding="3dp"
                                app:sliderIndicatorRadius="2dp"
                                app:sliderIndicatorSelectedColor="@color/themeColourTwo"
                                app:sliderIndicatorUnselectedColor="@color/homeScreenBgColor"
                                app:sliderScrollTimeInSec="2"
                                app:sliderStartAutoCycle="true"
                                android:layout_marginVertical="15dp"
                                android:layout_marginHorizontal="15dp" />

                            <!--<androidx.viewpager.widget.ViewPager
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginVertical="20dp"
                                android:background="@mipmap/ad_image" />-->
                        </androidx.cardview.widget.CardView>

                        <!--Goal Layout-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_screen_goal_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ad_layout_shadow"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="25dp"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/homeScreenGoalTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Goal"
                                    android:textColor="@color/themeColourOne"
                                    android:textSize="16sp" />

                                <!--<HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/homeScreenGoalTitle"
                                    android:paddingVertical="5dp">

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="15dp"
                                        android:layout_marginVertical="5dp"
                                        android:orientation="horizontal"
                                        android:padding="5dp">

                                        <RadioButton
