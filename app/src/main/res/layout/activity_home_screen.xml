                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_screen_goal_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ad_layout_shadow"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="35dp"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/homeScreenGoalTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Goal"
                                    android:textColor="@color/themeColourOne"
                                    android:textSize="18sp" />

                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/homeScreenGoalTitle"
                                    android:paddingVertical="5dp">

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="15dp"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="30dp"
                                            android:id="@+id/weightLossSubscription"
                                            android:background="@drawable/radio_button_selector"
                                            android:button="@android:color/transparent"
                                            android:elevation="4dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:padding="5dp"
                                            android:text="Weight Loss"
                                            android:textAlignment="center"
                                            android:textColor="@drawable/radio_button_text_selector" />

                                        <RadioButton
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
