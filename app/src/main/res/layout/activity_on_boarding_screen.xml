<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/onBoardingScrollLay"
        app:layout_constraintBottom_toTopOf="@+id/onBoardingBottomLay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/homeScreenBgColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onBoardingScreenSkip"
                android:gravity="center"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:layout_marginEnd="15dp"
                android:text="SKIP"
                style="@style/fontStyle"
                android:textColor="@color/themeColourTwo"
                android:textSize="14sp"/>


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/onBoardingPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/onBoardingScreenSkip"/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/onBoardingBottomLay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/homeScreenBgColor">

        <LinearLayout
            android:id="@+id/onBoardingPageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="27dp"
            android:layout_alignLeft="@+id/onBoardingNextButton"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onBoardingStartButton"
            android:text="Get Started"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/onBoardingNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="Next"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
             />


    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>