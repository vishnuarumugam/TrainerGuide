<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adConsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="1dp"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/adItem"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:id="@+id/adImageCard"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:elevation="5dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ad_image_shimmer"
                    app:shimmer_duration="800">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/adShadowTwo"/>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <ImageView
                    android:id="@+id/adImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/adExpiryLabel"
                android:gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/adImageCard"
                android:text="Expiry:"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"
                />
            <TextView
                android:id="@+id/adExpiry"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@id/adExpiryLabel"
                android:layout_toRightOf="@id/adExpiryLabel"
                android:text=" --"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"/>



            <TextView
                android:id="@+id/adAmountLabel"
                android:gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adExpiryLabel"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/adImageCard"
                android:text="Amount:"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"/>

            <TextView
                android:id="@+id/adAmount"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adExpiry"
                android:layout_marginLeft="5dp"
                android:text=" --"
                android:layout_alignTop="@id/adAmountLabel"
                android:layout_toRightOf="@id/adAmountLabel"
                android:textSize="14sp"
                style="@style/fontStyle"
                android:textColor="@color/themeColourOne"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>